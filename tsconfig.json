{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es6", "dom"],
        "types": [
            "reflect-metadata", 
            "node", 
            "morgan", 
            "mongodb", 
            "mongoose", 
            "restify",
            "bunyan"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "dist"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
